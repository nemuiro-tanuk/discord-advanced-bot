# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_test_guild_id_here

# Lavalink Configuration
LAVALINK_HOST=localhost
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass
LAVALINK_SECURE=false

# Database Configuration (Azure Cosmos DB for MongoDB)
COSMOS_MONGO_URI=mongodb://your_cosmos_connection_string_here
DB_NAME=discord_bot

# VOICEVOX (su-shiki) Configuration
SU_SHIKI_API_KEY=your_sushiki_api_key_here
SU_SHIKI_BASE_URL=https://api.su-shiki.com/v2/voicevox
TTS_CACHE_TTL=86400

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro
GEMINI_MONTHLY_BUDGET=3000
GEMINI_MAX_TOKENS=1000

# Weather API Configuration
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# News API Configuration
NEWS_API_KEY=your_newsapi_key_here
NEWS_API_BASE_URL=https://newsapi.org/v2

# Vercel Authentication Configuration
VERCEL_WEBHOOK_SECRET=your_vercel_webhook_secret_here
VERCEL_API_URL=https://your-vercel-app.vercel.app/api

# reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Redis Configuration (for queues and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Game API Configuration
ENKA_API_BASE_URL=https://enka.network/api
MIHOMO_API_BASE_URL=https://api.mihomo.me

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Monitoring Configuration
ENABLE_MONITORING=true
HEALTH_CHECK_PORT=3001

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=10

# Cache Configuration
CACHE_TTL=3600
VOICE_CACHE_DIR=./cache/voice
IMAGE_CACHE_DIR=./cache/images

# Economy System Configuration
ECONOMY_STARTING_BALANCE=1000
ECONOMY_DAILY_BONUS=100
ECONOMY_MAX_BALANCE=999999999

# Scheduler Configuration
SCHEDULER_TIMEZONE=Asia/Tokyo
WEATHER_POST_SCHEDULE=0 0 7,19 * * *
NEWS_POST_SCHEDULE=0 0 8,20 * * *

# Voice Channel Configuration
VC_IDLE_TIMEOUT=10800
VC_AFK_CHANNEL_NAME=AFK

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_MUSIC=true
ENABLE_TTS=true
ENABLE_AI_CHAT=true
ENABLE_ECONOMY=true
ENABLE_GAMES=true
ENABLE_TRANSLATION=true
ENABLE_MODERATION=true
ENABLE_TICKETS=true
ENABLE_GIVEAWAYS=true
